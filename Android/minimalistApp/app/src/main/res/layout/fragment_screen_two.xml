<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_drawable"
        tools:context=".ScreenTwoFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/radioCount"
                    android:layout_width="@dimen/rightmargin"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:checked="true"
                    android:text="@string/count"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_selection"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/radioTime"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/time"
                    android:background="@drawable/button_selection"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/radioCountTime"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:text="@string/count_time"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_selection"
                    android:button="@android:color/transparent" />

            </RadioGroup>


        </androidx.constraintlayout.widget.ConstraintLayout>




        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/textNewBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorLightBlue"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:text="@string/new_books"/>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/bookViewPager2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        </androidx.viewpager2.widget.ViewPager2>




    </LinearLayout>


</layout>
