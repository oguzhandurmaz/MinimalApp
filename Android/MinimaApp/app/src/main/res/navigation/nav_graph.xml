<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/countFragment">

    <fragment
        android:id="@+id/countFragment"
        android:name="com.example.minimaapp.CountFragment"
        android:label="General Informations"
        tools:layout="@layout/fragment_count" />
    <fragment
        android:id="@+id/fetchedBooksFragment"
        android:name="com.example.minimaapp.FetchedBooksFragment"
        android:label="New Books - Last 25"
        tools:layout="@layout/fragment_fetched_books" >
        <action
            android:id="@+id/action_fetchedBooksFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.minimaapp.BookDetailFragment"
        android:label="Book Detail"
        tools:layout="@layout/fragment_book_detail" >
        <argument
            android:name="imageUrl"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="author"
            app:argType="string" />
        <argument
            android:name="bookDetailUrl"
            app:argType="string" />
    </fragment>
</navigation>